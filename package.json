		"@playwright/test": "^1.29.0",
		"@vitest/coverage-c8": "^0.26.0",
		"astro": "^1.7.2",
		"astro-compress": "^1.1.24",
		"rollup": "^3.7.5",
		"typescript": "^4.9.4",
		"vite": "^4.0.2",
		"vite-plugin-compress": "^2.1.1",
		"vitest": "^0.26.1"
